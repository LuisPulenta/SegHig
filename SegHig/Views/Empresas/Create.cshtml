@model SegHig.Models.EmpresaViewModel

@{
    ViewData["Title"] = "Create";
}

<flash dismissable="true" />
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <h4>Crear Empresa</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="EmpresaTipoId" class="control-label"></label>
            <select asp-for="EmpresaTipoId" asp-items="Model.EmpresaTipos" class="form-control"></select>
            <span asp-validation-for="EmpresaTipoId" class="text-danger"></span>
        </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary btn-sm" />
                  <a asp-action="Index" class="btn btn-outline-success btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>