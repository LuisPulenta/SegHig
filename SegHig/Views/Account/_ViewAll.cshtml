@model IEnumerable<SegHig.Data.Entities.User>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="AccountsTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Empresa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Teléfono
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th>
                Habilitado
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("Register", "Account", new { }, Context.Request.Scheme)' , 'Nuevo Usuario')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Usuario</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Account" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.FullName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("EditUser", "Account", new { id=item.Id }, Context.Request.Scheme)' , 'Actualizar Usuario')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>
