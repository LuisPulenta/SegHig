@model SegHig.Models.EditUserViewModel

@{
    ViewData["Title"] = "Usuario";
    Layout = null;
}

<flash dismissable="true" />

<div class="container smfont">
    <form asp-action="EditUser" enctype="multipart/form-data" autocomplete="off" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
        <div class="box-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Empresas" />
             <partial name="_User" />
             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="col-md-6">
                        <label asp-for="EmpresaId" class="control-label"></label>
                        <select asp-for="EmpresaId" asp-items="Model.Empresas" class="form-control"></select>
                        <span asp-validation-for="EmpresaId" class="text-danger"></span>
                    </div>
        </div>
        <div class="modal-footer">
            <a asp-action="ChangePassword" class="btn btn-outline-secondary">Cambiar Contraseña</a>
            <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}