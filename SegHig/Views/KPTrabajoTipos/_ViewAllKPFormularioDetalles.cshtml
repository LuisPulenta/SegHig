@model SegHig.Data.Entities.KPFormulario

<flash dismissable="true" />

<table class="table table-striped table-responsive-md table-bordered smfont"  id="FormularioDetallesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.KPFormularioDetalles.FirstOrDefault().Orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KPFormularioDetalles.FirstOrDefault().Description)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.KPFormularioDetalles.FirstOrDefault().Ponderacion)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.KPFormularioDetalles.FirstOrDefault().Active)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddFormularioDetalle", "KPTrabajoTipos", new { id = Model?.Id }, Context.Request.Scheme)' , 'Nuevo Detalle')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Detalle</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.KPFormularioDetalles)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orden)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Ponderacion)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("EditFormularioDetalle", "KPTrabajoTipos", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Detalle')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                @if (!item.Active)
                     {
                       <a asp-action="OnOffFormularioDetalle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fa-solid fa-toggle-on"></i></a>
                     }

                @if (item.Active)
                     {
                       <a asp-action="OnOffFormularioDetalle" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-toggle-off"></i></a>
                     }
            </td>
        </tr>
        }
    </tbody>
</table>
