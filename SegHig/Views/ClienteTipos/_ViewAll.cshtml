@model IEnumerable<SegHig.Data.Entities.ClienteTipo>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="ClienteTiposTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "ClienteTipos", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo Tipo de Cliente')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Tipo de Cliente</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="ClienteTipos" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="ClienteTipos" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Active)</a>
            </td>
         
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "ClienteTipos", new { id=item.Id }, Context.Request.Scheme)' , 'Actualizar Tipo de Cliente')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>

                @if (!item.Active)
                     {
                       <a asp-action="OnOff" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fa-solid fa-toggle-on"></i></a>
                     }

                @if (item.Active)
                     {
                       <a asp-action="OnOff" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-toggle-off"></i></a>
                     }
            </td>
        </tr>
        }
    </tbody>
</table>
