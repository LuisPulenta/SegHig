@model SegHig.Models.FormularioViewModel
@{
    ViewData["Title"] = "Create";
}

<h4>Crear Formulario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddFormulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrabajoTipoId" />
            <partial name=_Formulario/>
            
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary btn-sm" />
                <a asp-action="DetailsTrabajoTipo" asp-route-id="@Model.TrabajoTipoId" class="btn btn-outline-success btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
