@model SegHig.Models.ClienteViewModel

@{
    ViewData["Title"] = "Edit";
}
<flash dismissable="true" />

<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <h4>Editar Cliente</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
            <label asp-for="ClienteTipoId" class="control-label"></label>
            <select asp-for="ClienteTipoId" asp-items="Model.ClienteTipos" class="form-control"></select>
            <span asp-validation-for="ClienteTipoId" class="text-danger"></span>
        </div>
            <div class="form-group mt-2" >
                              <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                <a asp-action="Index" class="btn btn-outline-success btn-sm">Regresar</a>
            </div>
        </form>
    </div>
</div>
