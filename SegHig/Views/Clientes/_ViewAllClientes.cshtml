@model IEnumerable<SegHig.Data.Entities.Cliente>

<table class="table table-striped table-responsive-md table-bordered smfont"  id="ClientesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteTipo.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                Tipos de Trabajos
            </th>

            <th>
                <a onclick="showInPopup('@Url.Action("Create", "Clientes", new { }, Context.Request.Scheme)' , 'Nuevo Cliente')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i> Cliente</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Clientes" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteTipo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.TrabajoTipos.Count)
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("Edit", "Clientes", new { id=item.Id }, Context.Request.Scheme)' , 'Actualizar Cliente')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                <button data-id="@item.Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                @if (!item.Active)
                     {
                       <a asp-action="OnOff" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fa-solid fa-toggle-on"></i></a>
                     }

                @if (item.Active)
                     {
                       <a asp-action="OnOff" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-toggle-off"></i></a>
                     }
            </td>
        </tr>
        }
    </tbody>
</table>
