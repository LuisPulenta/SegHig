@model SegHig.Data.Entities.FormularioDetalle

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Está seguro de querer borrar este Detalle?</h3>
<div>
    <hr />
    <partial name=_FormularioDetalleDetails/>
    
    <form asp-action="DeleteFormularioDetalle">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger btn-sm" />
        <a asp-action="DetailsFormulario" asp-route-id=@Model?.Formulario.Id class="btn btn-outline-success btn-sm">Regresar</a>
    </form>
</div>
