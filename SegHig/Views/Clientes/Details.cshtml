@model SegHig.Data.Entities.Cliente

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Cliente</h4>
    <hr />
    <partial name=_ClienteDetails/>
</div>
<div>
    <a asp-action="AddTipoTrabajo" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm" >Agregar Tipo de Trabajo</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning btn-sm" >Editar Cliente</a>
    <a asp-action="Index" class="btn btn-outline-success btn-sm">Regresar</a>
</div>

<hr />

 <div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Tipos de Trabajo</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTableTiposTrabajo">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrabajoTipos.FirstOrDefault().Orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrabajoTipos.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrabajoTipos.FirstOrDefault().Formularios)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrabajoTipos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Formularios.Count)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-action="EditTrabajoTipo" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="DetailsTrabajoTipo" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                <a asp-action="DeleteTrabajoTipo" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>

@*</table>*@

                </table>
            </div>
        </div>
    </div>



    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Empleados</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTableEmpleados">

    <thead>
        <tr>
            <th>
                Empleado
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados.FirstOrDefault().Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados.FirstOrDefault().Active)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Empleados) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-action="EditEmpleado" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="DetailsEmpleado" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i></a>
                <a asp-action="DeleteEmpleado" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>

@*</table>*@

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}
