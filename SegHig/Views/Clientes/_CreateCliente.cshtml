@model SegHig.Models.ClienteViewModel

<div class="row">
    <div class="col-md-6 offset-3">
            <div class="form-group">
                 <span class="required">*</span>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="required">*</span>
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="required">*</span>
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="required">*</span>
                <label asp-for="ClienteTipoId" class="control-label"></label>
                <select asp-for="ClienteTipoId" asp-items="Model.ClienteTipos" class="form-control"></select>
                <span asp-validation-for="ClienteTipoId" class="text-danger"></span>
            </div>
    </div>
</div>
